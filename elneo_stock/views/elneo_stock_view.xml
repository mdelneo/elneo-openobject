		<!-- Picking type kanban -->
		<record id="stock_picking_type_kanban_awans" model="ir.ui.view">
            <field name="name">stock.picking.type.kanban.awans</field>
            <field name="model">stock.picking.type</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey" create="0">
					<field name="count_picking_ready"/>
                    <templates>
                        <t t-name="kanban-box">
							<div class="oe_kanban_content">
								<h4 class="text-center"><strong><field name="complete_name"/></strong></h4>
								<a name="%(action_stock_picking_special_awans)d" type="action">
									<field name="count_picking_ready"/> Ready
								</a>
							</div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record id="stock_picking_type_kanban_wetteren" model="ir.ui.view">
            <field name="name">stock.picking.type.kanban.wetteren</field>
            <field name="model">stock.picking.type</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey" create="0">
					<field name="count_picking_ready"/>
                    <templates>
                        <t t-name="kanban-box">
							<div class="oe_kanban_content">
								<h4 class="text-center"><strong><field name="complete_name"/></strong></h4>
								<a name="%(action_stock_picking_special_wetteren)d" type="action">
									<field name="count_picking_ready"/> Ready
								</a>
							</div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="action_stock_picking_special_type_awans_kanban">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="stock_picking_type_kanban_awans"/>
            <field name="act_window_id" ref="action_stock_picking_special_type_awans"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_stock_picking_special_type_wetteren_kanban">
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="stock_picking_type_kanban_wetteren"/>
            <field name="act_window_id" ref="action_stock_picking_special_type_wetteren"/>
        </record>
	
	
		<!-- VIEW INHERITANCE -->
	
	
		<!-- picking form -->
		<record id="view_picking_form_elneo_stock" model="ir.ui.view">
            <field name="name">view.picking.form.elneo.stock</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_print_picking']" position="replace" />
                
            </field>
        </record>
	
		<!-- Stock warehouse orderpoint : add stocked for customer -->
		<record id="view_warehouse_orderpoint_form_elneo_stock" model="ir.ui.view">
            <field name="name">stock.warehouse.orderpoint.form.elneo.stock</field>
            <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form" />
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='product_id']" position="after">
            		<field name="stocked_for_customer" />
            	</xpath>
            </field>
        </record>
	
	
		<record id="transfert_move" model="ir.actions.act_window">
            <field name="name">Transfert move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">transfert.move.wizard</field>
            <field name="view_id" ref="view_transfert_move_wizard"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
	
		<!-- Add arrow to process line by line reservations -->
		<record id="view_move_picking_tree_elneo_stock" model="ir.ui.view">
            <field name="name">view.move.picking.tree.elneo.stock</field>
			<field name="inherit_id" ref="stock.view_move_picking_tree" />
            <field name="model">stock.move</field>
            <field eval="4" name="priority"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='product_id']" position="before">
            		<field name="picking_type_code" invisible="True" />
            		<button icon="gtk-go-forward" name="1665" type="action" context="{}" 
            		attrs="{'invisible':['|',('picking_type_code','!=','internal'),('state','!=','assigned')]}" />
            	</xpath>
            </field>
        </record>
	

		<!-- Product supplier info FORM : - add brut_price and discount -->
		<record id="view_picking_internal_search_elneo_stock" model="ir.ui.view">
			<field name="name">view.picking.internal.search.elneo.stock</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_internal_search" />
			<field name="arch" type="xml">
				<field name="name" position="before">
					<field name="origin" />
				</field>
				
				<filter name="waiting" position="attributes">
					<attribute name="domain">[('state','in', ['confirmed', 'waiting'])]</attribute>
				</filter>
				
			</field>
		</record>



		<!-- Add auto_validate in procurement rule -->
		<record model="ir.ui.view" id="view_procurement_rule_form_elneo_stock">
			<field name="name">view.procurement.rule.form.elneo.stock</field>
			<field name="model">procurement.rule</field>
			<field name="inherit_id" ref="stock.view_procurement_rule_form_stock_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='picking_type_id']" position="after">
					<field name="autovalidate_dest_move" />
				</xpath>
			</field>
		</record>

	</data>
</openerp>