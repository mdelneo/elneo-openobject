<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	 <record id="action_partner_form_elneo" model="ir.actions.act_window">
            <field name="name">Companies</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <!--  <field name="inherit_id" ref="base.action_partner_form"/>-->
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_company','=',True)]</field>
            <!-- <field name="search_view_id" ref="base.view_res_partner_filter"/> -->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        
        <record id="action_partner_form_elneo_contacts" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <!--  <field name="inherit_id" ref="base.action_partner_form"/>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('is_company','=',False)]</field>
            <!-- <field name="search_view_id" ref="base.view_res_partner_filter"/> -->
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
	
        

        
        
		<record id="view_order_tree_elneo_sale" model="ir.ui.view">
            <field name="name">view.sale.order.tree.elneo.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
            	<xpath expr="//tree/field[@name='partner_id']" position="after">
            		<field name="client_order_ref"/>
            	</xpath>
            	<xpath expr="//tree/field[@name='amount_total']" position="before">
            		<field name="margin"/>
            		<field name="amount_untaxed"/>
            	</xpath>
            </field>
        </record>
        <record id="view_quotation_tree_elneo_sale" model="ir.ui.view">
            <field name="name">view.sale.order.tree.elneo.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='partner_id']" position="after">
            		<field name="client_order_ref"/>
            		
            	</xpath>
            	<xpath expr="//tree/field[@name='amount_total']" position="before">
            		<field name="margin"/>
            		<field name="amount_untaxed"/>
            	</xpath>
            </field>
        </record>
        
		<record id="view_order_form_elneo_sale" model="ir.ui.view">
            <field name="name">view.sale.order.form.elneo.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='partner_invoice_id']" position="before">
            		<field name="partner_order_id"/>
            	</xpath>
            	<xpath expr="//field[@name='partner_shipping_id']" position="after">
            		<field name="quotation_address_id"/>
            	</xpath>
            	<xpath expr="//field[@name='partner_id']" position="attributes">
            		<attribute name="on_change">1</attribute>
            		<attribute name="domain">[('is_company','=',True)]</attribute>
            		<attribute name="context">{'show_address':1}</attribute>
            	</xpath>
            	<xpath expr="//field[@name='project_id']" position="replace"/>
			</field>
        </record>
        <record model="ir.ui.view" id="sale_view_inherit123_elneo_sale">
            <field name="name">sale.order.inherit.elneo.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_crm.sale_view_inherit123"/>
            <field name="arch" type="xml">
                	<xpath expr="//field[@name='campaign_id']" position="replace"/>
                   	<xpath expr="//field[@name='medium_id']" position="replace"/>
                    <xpath expr="//field[@name='source_id']" position="replace"/>             
            </field>
        </record>
        
        <menuitem id="sale.menu_sale_order" parent="base.menu_sales" sequence="2"/>
        <menuitem id="sale.menu_sale_quotations" parent="base.menu_sales" sequence="1"/>
        <delete model="ir.ui.menu" id="base.menu_partner_form"/>
        <menuitem id="menu_partner_form_elneo" parent="base.menu_sales" action="action_partner_form_elneo" sequence="3"/>
        <menuitem id="menu_partner_form_elneo_contacts" parent="base.menu_sales" action="action_partner_form_elneo_contacts" sequence="2"/>
        <menuitem id="sales_team.menu_sales_team_act" name="Sales Teams" parent="base.menu_sales" sequence="5" />
        
        
        <!-- Menu CRM -->
        <menuitem 
        	id="crm"
        	name="Crm" 
        	sequence="15"        
        	/>
        	
        <menuitem 
        	id="crm_partners"
        	parent = 'crm'
        	name="Partners" 
        	sequence="15"        
        	/>
        	
        <menuitem 
        	id="crm_partners_companies"
        	parent = 'crm_partners'
        	name="Companies" 
        	action="action_partner_form_elneo"        	
        	sequence="10"        
        	/>
        	
        <menuitem 
        	id="crm_partners_contacts"
        	parent = 'crm_partners'
        	name="Contacts" 
        	action="action_partner_form_elneo_contacts"
        	sequence="20"        
        	/>
        
        
            
	</data>
	
	
</openerp>