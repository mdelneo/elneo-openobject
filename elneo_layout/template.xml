<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="assets_backend" name="Sale Template Larger Sheet"
			inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/elneo_layout/static/src/css/elneo.css" />

			</xpath>
			<xpath expr="//script[@src='/web/static/src/js/view_form.js']"
				position="after">
				<script type="text/javascript" src="/elneo_layout/static/src/js/view_form.js"></script>
				<script type="text/javascript" src="/elneo_layout/static/src/js/views.js"></script>
			</xpath>
		</template>


		<template id="external_layout_header_elneo" inherit_id="report.external_layout_header">
			<xpath expr="//div[@class='header']" position="replace">
				<div class="header">
			        <div class="row">
		<img src="/elneo_layout/static/src/img/header.png" style="margin-bottom:10px;" />
			        </div>
			        <div class="row zero_min_height">
			            <div class="col-xs-12">
			                <div style="border-bottom: 1px solid #ddd;"/>
			            </div>
			        </div>
                             
		    	</div>
			</xpath>
		</template>

		<template id="external_layout_footer_elneo" inherit_id="report.external_layout_footer">
			<xpath expr="//div[@class='footer']" position="replace">
                              

			    <div class="footer" >



			        <div class="text-left" style="background-color:#929191;">
                                    <div t-if="o.user_id.id != user.id"> <table width="100%">
                                        <tbody>
                                            <td fontcolor="solid #929191;">
                                                 <div t-if="o._name in ('sale.order') and o.user_id"><span><Strong>Sales contact: <span t-field="o.user_id.name"/></Strong></span><br/>
                                                <span t-if="o.user_id.phone"> Tel:<span t-field="o.user_id.phone"/> |</span> <span t-if="o.user_id.email">Email: <span t-field="o.user_id.email"/> </span>
                                                </div> 			            	           
			                    </td>
			                    <td style="border-left: 1px solid #929191; padding-left:3px;">			                       
                                                <div><div><Strong>Administrative contact: <span t-field="user.partner_id.name"/></Strong></div>
                                                <div>Tel: <span t-field="user.partner_id.phone"/> | E-mail: <span t-field="user.partner_id.email"/></div>
                                                </div> 
                                            </td>
			                </tbody>
                                   </table></div>
                                  
                                   <div t-if="o.user_id.id == user.id"> <table width="100%" >
                                        <tbody>
                                            <td>
                                                 <div t-if="o._name in ('sale.order') and o.user_id"><span><Strong>Sales contact: <span t-field="o.user_id"/></Strong></span><br/>
                                                <span t-if="o.user_id.phone"> Tel:<span t-field="o.user_id.phone"/> |</span> <span t-if="o.user_id.email">Email:<span t-field="o.user_id.email"/> </span>
                                                </div> 			            	           
			                    </td>
			                </tbody>
                                   </table>	</div>
	                               
                                        <table width="100%" style="background-color:#ddd;" >
                                        <tbody>
			                    <tr>	
                                                <td style="padding-top:4px;">		                       
                                                <div><span t-if="user.lang != 'nl_BE'"><strong>Elneo (Technofluid SA) </strong> | TVA: BE0438681213 </span>
                                                <span t-if="user.lang=='nl_BE'"><strong>Elneo (Technofluid NV) </strong> | TVA: BE0438681213 | R.P.R.: Lg 170.141</span></div>
                                                <div> <span t-field="user.partner_id.street"/> - <span t-field="user.partner_id.zip"/>  <span t-field="user.partner_id.city"/> | <span>Tel : <span t-field="user.partner_id.phone"/> </span> | <span>Fax : <span t-field="user.partner_id.fax"/></span> | <span>E-mail : info@elneo.com</span>  </div>			            	           
                                                   </td>
			                    </tr>
			                    <tr >	
                                                <td>	
                                                 <div> ING: BE29 3400 6157 8264 - BIC: BBRU BE BB | Belfius: BE26 0688 9108 1029 - BIC: GKCC BE BB</div>
                                                </td>
			                    </tr>
			                </tbody>
                                   </table>			       
		                   
			            <t t-if="company.custom_footer">
			                <span t-raw="company.rml_footer"/>
			            </t>
			
			     
			        </div>
			    </div>    
		    </xpath>  
		</template>
	</data>
</openerp>