<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="assets_backend" name="Sale Template Larger Sheet"
			inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/elneo_layout/static/src/css/elneo.css" />

			</xpath>
			<xpath expr="//script[@src='/web/static/src/js/view_form.js']"
				position="after">
				<script type="text/javascript" src="/elneo_layout/static/src/js/view_form.js"></script>
				<script type="text/javascript" src="/elneo_layout/static/src/js/views.js"></script>
			</xpath>
		</template>


		<template id="external_layout_header_elneo" inherit_id="report.external_layout_header">
			<xpath expr="//div[@class='header']" position="replace">
				<div class="header">
			        <div class="row">
						<img src="/elneo_layout/static/src/img/header.png" style="margin-bottom:10px;" />
			        </div>
			        <div class="row zero_min_height">
			            <div class="col-xs-12">
			                <div style="border-bottom: 1px solid #ddd;"/>
			            </div>
			        </div>
                             
		    	</div>
			</xpath>
		</template>

		<template id="external_layout_footer_elneo" inherit_id="report.external_layout_footer">
			<xpath expr="//div[@class='footer']" position="replace">
				<div class="footer">
					<div class="text-center" style="border-top: 1px solid black;">
					

						<ul t-if="not company.custom_footer" class="list-inline">
							<li t-if="company.website">
								<span t-field="company.website" />
							</li>
						</ul>

						<ul t-if="not company.custom_footer" class="list-inline">
							<li t-if="user.partner_id.name">
								<strong>Contact:
									<span t-field="user.partner_id.name" />
								</strong>
							</li>

							<li t-if="user.partner_id.name">&amp;bull;</li>
							<li t-if="user.partner_id.phone">
								<strong>Phone:
									<span t-field="user.partner_id.phone" />
								</strong>
							</li>

							<li t-if="user.partner_id.phone">&amp;bull;</li>
							<li t-if="user.partner_id.email">
								<strong>Email:
									<span t-field="user.partner_id.email" />
								</strong>
							</li>

							<li t-if="user.partner_id.email">&amp;bull;</li>
							<li>
								<strong>Page:</strong>
							</li>
							<li>
								<strong>
									<span class="page" />
								</strong>
							</li>
							<li>/</li>
							<li>
								<strong>
									<span class="topage" />
								</strong>
							</li>
						</ul>

						<t t-if="company.custom_footer">
							<span t-raw="company.rml_footer" />
						</t>

					</div>
				</div>
			</xpath>
		</template>
	</data>
</openerp>