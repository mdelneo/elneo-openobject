<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
 		<record id="view_sale_default_route_settings" model="ir.ui.view">
            <field name="name">sale default route settings</field>
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="sale_stock.view_sales_config_sale_stock"/>
            <field name="arch" type="xml">
            	<xpath expr="//div[@name='Sale Features']" position="inside">
                         <div>
		                     <label for="sale_default_route_stock"/>
		                     <field name="sale_default_route_stock" class="oe_inline"/>
		                     
		                     <label for="sale_default_route_no_stock"/>
		                     <field name="sale_default_route_no_stock" class="oe_inline"/>
                              
                         </div>
                     </xpath>
                
            </field>
        </record>
	</data>
</openerp>