<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_wizard_sale_confirm" model="ir.ui.view">
			<field name="name">Wizard sale confirm</field>
			<field name="model">wizard.sale.confirm</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sale confirm">
					<label string="At least one product must create a maintenance element linked to an installation. Please select it or create a new one." colspan="4" />
					<field name="installation_id" colspan="4" domain="[('partner_id','=',context.get('partner_id'))]" />
					<button string="Assign" type="object"
						name="validate" />
					<button string="Cancel" special="cancel" />
				</form>
			</field>
		</record>

		
	</data>
</openerp>