<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="product_template_form_view_elneo_product" model="ir.ui.view">
            <field name="name">product.template.elneo.product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
        		<field name="active" position="after">
        			<field name="categ_id"/>
        		</field>
        	</field>
       	</record>
       	
       	
       	<record id="product_template_search_view_elneo" model="ir.ui.view">
            <field name="name">product.template.search.elneo</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
            <!--
            <field name="name" position="replace">
               	<field name="name" string="Product" filter_domain="['|', ('name','ilike',self), ('default_code','ilike',self)]"/>
            </field>
             -->
             
            	<field name="name" position="before">
                	<field name="ext_name" string="Product (Advanced Search)"/>
                </field>
             
           	</field>
        </record>
    </data>
</openerp>